<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/moins_flou"
    tools:context="com.example.fella.tdm1_project.MainActivity">


    <TextView
        android:text="Assist Assurance"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:id="@+id/textView2"
        android:textColor="#FFFFFF"
        android:textSize="45sp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.050000012" />

    <TextView
        android:text="Application pour déclarer vos sinistres de type accident de voiture"
        android:layout_width="212dp"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintLeft_toLeftOf="@+id/textView2"
        app:layout_constraintRight_toRightOf="@+id/textView2"
        app:layout_constraintHorizontal_bias="0.496" />

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="268dp"
        android:layout_height="350dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="32dp"
        android:orientation="vertical"
        android:weightSum="5"
        app:layout_constraintBottom_toTopOf="@+id/btndec"
        app:layout_constraintHorizontal_bias="0.481"
        app:layout_constraintLeft_toLeftOf="@+id/textView3"
        app:layout_constraintRight_toRightOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:layout_constraintVertical_bias="0.19"
        tools:layout_editor_absoluteX="44dp">

        <Button
            android:id="@+id/button13"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="8dp"
            android:layout_weight="1"
            android:alpha="0.7"
            android:background="@color/gris"
            android:onClick="chargerActivity"
            android:text="Déclarer un sinistre"
            android:textSize="15sp" />

        <Button
            android:id="@+id/button11"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="8dp"
            android:layout_weight="1"
            android:alpha="0.7"
            android:background="@color/gris"
            android:onClick="chargerActivity"
            android:text="Profil"
            android:textSize="15sp" />

        <Button
            android:id="@+id/button12"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="8dp"
            android:layout_weight="1"
            android:alpha="0.7"
            android:background="@color/gris"
            android:onClick="chargerActivity"
            android:text="Véhicules"
            android:textSize="15sp"
        />

        <Button
            android:id="@+id/button15"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="8dp"
            android:layout_weight="1"
            android:alpha="0.7"
            android:background="@color/gris"
            android:onClick="chargerActivity"
            android:text="liste des dossiers"
            android:textSize="15sp" />

        <Button
            android:id="@+id/buttonMap"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="8dp"
            android:layout_weight="1"
            android:alpha="0.7"
            android:background="@color/gris"
            android:onClick="chargerActivity"
            android:text="Sites d'expertise"
            android:textSize="15sp" />


    </LinearLayout>

    <ImageView
        android:id="@+id/btndec"
        android:layout_width="46dp"
        android:layout_height="46dp"
        app:srcCompat="@drawable/off_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="16dp"
        android:onClick="chargerActivity"
        app:layout_constraintRight_toRightOf="parent" />


</android.support.constraint.ConstraintLayout>