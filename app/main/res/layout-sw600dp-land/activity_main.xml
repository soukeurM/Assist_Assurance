<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="5"
    android:background="@drawable/moins_flou">

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_main"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        tools:context="com.example.fella.tdm1_project.MainActivity"
        android:layout_weight="3">


        <TextView
            android:text="Assist Assurance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            android:textColor="#FFFFFF"
            android:textSize="64sp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp"
            app:layout_constraintVertical_bias="0.29000002" />

        <TextView
            android:text="Application pour déclarer vos sinistres de type accident de voiture"
            android:layout_width="373dp"
            android:layout_height="173dp"
            android:id="@+id/textView3"
            android:textColor="#FFFFFF"
            android:textSize="28sp"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@+id/textView2"
            app:layout_constraintLeft_toLeftOf="@+id/textView2"
            app:layout_constraintRight_toRightOf="@+id/textView2" />

    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_main2"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        tools:context="com.example.fella.tdm1_project.MainActivity"
        android:layout_weight="2">




        <Button
            android:text="Profile"
            android:layout_margin="8dp"
            android:layout_width="313dp"
            android:layout_height="wrap_content"
            android:id="@+id/button11"
            android:alpha="0.7"
            android:background="@color/gris"
            android:onClick="chargerActivity"
            android:textSize="24px"
            android:layout_marginStart="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.54"
            app:layout_constraintVertical_bias="0.33" />

        <Button
            android:text="Véhicules"
            android:layout_margin="8dp"
            android:layout_width="313dp"
            android:layout_height="wrap_content"
            android:id="@+id/button12"
            android:alpha="0.7"
            android:background="@color/gris"
            android:onClick="chargerActivity"
            android:textSize="24px"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/button11"
            app:layout_constraintLeft_toLeftOf="@+id/button11"
            app:layout_constraintRight_toRightOf="@+id/button11" />
        <Button
            android:text="Déclarer un sinistre"
            android:layout_width="313dp"
            android:layout_height="wrap_content"
            android:id="@+id/button13"
            android:layout_margin="8dp"
            android:alpha="0.7"
            android:background="@color/gris"
            android:onClick="chargerActivity"
            android:textSize="24px"
            app:layout_constraintTop_toBottomOf="@+id/button12"
            android:layout_marginTop="16dp"
            app:layout_constraintRight_toRightOf="@+id/button12"
            app:layout_constraintLeft_toLeftOf="@+id/button12" />
        <Button
            android:text="Numéros d'urgence"
            android:layout_width="313dp"
            android:layout_height="wrap_content"
            android:id="@+id/button14"
            android:alpha="0.7"
            android:layout_margin="8dp"
            android:background="@color/gris"
            android:onClick="chargerActivity"
            android:textSize="24px"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/button13"
            app:layout_constraintLeft_toLeftOf="@+id/button13"
            app:layout_constraintRight_toRightOf="@+id/button13" />



    </android.support.constraint.ConstraintLayout>

</LinearLayout>