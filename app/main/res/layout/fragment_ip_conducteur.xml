
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="layout.IP_conducteur"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        android:weightSum="8">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_NomC"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            tools:layout_constraintTop_creator="1"
            tools:layout_constraintLeft_creator="1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <EditText
                android:id="@+id/nomc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nom" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_PrenomC"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <EditText
                android:id="@+id/prenomc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:hint="Prénom" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_AdresseC"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <EditText
                android:id="@+id/adressec"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Adresse" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_PermisC"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <EditText
                android:id="@+id/permisc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:hint="Permis de conduite N°" />

        </android.support.design.widget.TextInputLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:weightSum="5">

            <TextView
                android:text="Date"
                android:layout_width="0dp"
                android:layout_height="49dp"
                android:layout_weight="2.00"
                android:id="@+id/dateId"
                android:layout_marginBottom="0dp"
                android:layout_marginTop="20dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="16sp" />

            <CalendarView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/calendarView"
                android:layout_weight="3" />



        </LinearLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_WilayaP"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <EditText
                android:id="@+id/wilyap"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Par la wilaya de" />
        </android.support.design.widget.TextInputLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:weightSum="2">


            <TextView
                android:text="Catégorie"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:id="@+id/categoriep"
                android:layout_marginTop="20dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="16sp" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:weightSum="6"
                android:orientation="horizontal">


                <RadioButton android:id="@+id/CA"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="A"
                    android:onClick="onRadioButtonClicked"/>

                <RadioButton android:id="@+id/CB"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="B"
                    android:onClick="onRadioButtonClicked"/>
                <RadioButton android:id="@+id/CC"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="C"
                    android:onClick="onRadioButtonClicked"/>
                <RadioButton android:id="@+id/CD"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="D"
                    android:onClick="onRadioButtonClicked"/>
                <RadioButton android:id="@+id/CE"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="E"
                    android:onClick="onRadioButtonClicked"/>
                <RadioButton android:id="@+id/CF"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="F"
                    android:onClick="onRadioButtonClicked"/>

            </RadioGroup>

        </LinearLayout>

    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>