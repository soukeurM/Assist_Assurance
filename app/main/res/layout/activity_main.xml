<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/moins_flou"
    tools:context="com.example.fella.tdm1_project.MainActivity">


    <TextView
        android:text="Assist Assurance"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:id="@+id/textView2"
        android:textColor="#FFFFFF"
        android:textSize="45sp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        app:layout_constraintVertical_bias="0.050000012" />

    <TextView
        android:text="Application pour déclarer vos sinistres de type accident de voiture"
        android:layout_width="212dp"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintLeft_toLeftOf="@+id/textView2"
        app:layout_constraintRight_toRightOf="@+id/textView2"
        android:layout_marginTop="16dp"
        />

    <Button
        android:text="Profile"
        android:layout_width="254dp"
        android:layout_height="60dp"
        android:id="@+id/button11"
        android:alpha="0.7"
        android:background="@color/gris"
        android:onClick="chargerActivity"
        android:textSize="32px"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        android:layout_marginTop="40dp"
        app:layout_constraintLeft_toLeftOf="@+id/textView3"
        app:layout_constraintRight_toRightOf="@+id/textView3"
        app:layout_constraintHorizontal_bias="0.38"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:text="Véhicules"
        android:layout_width="254dp"
        android:layout_height="60dp"
        android:id="@+id/button12"
        android:alpha="0.7"
        android:background="@color/gris"
        android:onClick="chargerActivity"
        android:textSize="32px"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/button11"
        app:layout_constraintLeft_toLeftOf="@+id/button11"
        app:layout_constraintRight_toRightOf="@+id/button11" />
    <Button
        android:text="Déclarer un sinistre"
        android:layout_width="254dp"
        android:layout_height="60dp"
        android:id="@+id/button13"
        android:alpha="0.7"
        android:background="@color/gris"
        android:onClick="chargerActivity"
        android:textSize="32px"
        app:layout_constraintTop_toBottomOf="@+id/button12"
        android:layout_marginTop="16dp"
        app:layout_constraintRight_toRightOf="@+id/button12"
        app:layout_constraintLeft_toLeftOf="@+id/button12" />
    <Button
        android:text="Numéros d'urgence"
        android:layout_width="254dp"
        android:layout_height="60dp"
        android:id="@+id/button14"
        android:alpha="0.7"
        android:background="@color/gris"
        android:onClick="chargerActivity"
        android:textSize="32px"
        app:layout_constraintLeft_toLeftOf="@+id/button13"
        app:layout_constraintRight_toRightOf="@+id/button13"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/button13"
        app:layout_constraintHorizontal_bias="1.0" />



</android.support.constraint.ConstraintLayout>