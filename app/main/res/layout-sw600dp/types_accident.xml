<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/moins_flou"
    tools:context="com.example.fella.tdm1_project.TypesAccident">



    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp">


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="220dp">

            <Button
                android:text="Collision"
                android:layout_width="220dp"
                android:layout_height="match_parent"
                android:id="@+id/button5"
                android:alpha="0.7"
                android:background="@color/gris"
                android:textSize="24dp"
                android:layout_marginRight="20dp"
                android:onClick="chargerActivity"
                />

            <Button
                android:text="Brise de glace ou vitre"
                android:layout_width="220dp"
                android:layout_height="match_parent"
                android:id="@+id/button8"
                android:alpha="0.7"
                android:background="@color/gris"
                android:textSize="24dp"
                android:onClick="chargerActivity"
                />


        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="220dp"
            android:id="@+id/linearLayout"
            android:layout_marginTop="20dp"
            >

            <Button
                android:text="Incendie et explosion"
                android:layout_width="220dp"
                android:layout_height="match_parent"
                android:id="@+id/button7"
                android:alpha="0.7"
                android:background="@color/gris"
                android:textSize="24dp"
                android:layout_marginRight="20dp"
                android:onClick="chargerActivity"
                />

            <Button
                android:text="Vol et cambrilolage"
                android:layout_width="220dp"
                android:layout_height="match_parent"
                android:id="@+id/button6"
                android:alpha="0.7"
                android:background="@color/gris"
                android:textSize="24dp"
                android:onClick="chargerActivity (TypesAccident)"
                />




        </LinearLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>